@model X.PagedList.IPagedList<Heksa.Models.WorkExperience>


<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    Layout = "~/Views/Shared/Heksa_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container-fluid px-4">
    <div class="card my-4">
        <div class="card-header">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Work Experience  /</span>  List</h4>
            <a class="btn btn-primary" asp-action="Create" style="background-color: #0073fe;">
                <span class="tf-icons bx bx-book-add"></span>&nbsp; Create New
            </a>

            <div class="row mt-3">
                <div class="col-md-6">
                    <form asp-action="WorkExperiences" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>

                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="WorkExperienceId" asp-route-page="1">Work Experience ID</a>
                            </th>


                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="Field" asp-route-page="1">Field</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="Position" asp-route-page="1">Position</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="StartDate" asp-route-page="1">Start Date</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="EndDate" asp-route-page="1">End Date</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="JobDesc" asp-route-page="1">Job Description</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="CreateDate" asp-route-page="1">Create Date</a>
                            </th>
                            <th>
                                <a asp-action="WorkExperiences" asp-route-sortOrder="CreateBy" asp-route-page="1">Create By</a>
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var workExperience in Model)
                        {
                            <tr>
                                <td>

                                    <div class="dropdown">
                                        <button type="button"
                                                class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="EditUser" asp-route-id="@workExperience."><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                            <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@workExperience."><i class="bx bx-trash me-1"></i>Delete</a>
                                            <a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@workExperience."><i class="bx bx-link-alt me-1"></i>Manage Page Access</a>

                                        </div>
                                    </div>

                                </td>
                                <td>@workExperience.WorkExperienceId</td>

                                <td>@workExperience.Field</td>
                                <td>@workExperience.Position</td>
                                <td>@workExperience.StartDate</td>
                                <td>@workExperience.EndDate</td>
                                <td>@workExperience.JobDesc</td>
                                <td>@workExperience.CreateDate</td>
                                <td>@workExperience.CreateBy</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
