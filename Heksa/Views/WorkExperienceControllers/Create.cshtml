@model Heksa.Models.WorkExperience

@{
    ViewData["Title"] = "Create Work Experience";
    Layout = "~/Views/Shared/Heksa_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Heksa/</span> Create Work Experience</h4>
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3 row">
                <label asp-for="AgenId" class="col-md-2 col-form-label">Agen ID</label>
                <div class="col-md-4">
                    <input asp-for="AgenId" class="form-control" />
                    <span asp-validation-for="AgenId" class="text-danger"></span>
                </div>
                <label asp-for="Field" class="col-md-2 col-form-label">Field</label>
                <div class="col-md-4">
                    <input asp-for="Field" class="form-control" />
                    <span asp-validation-for="Field" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Position" class="col-md-2 col-form-label">Position</label>
                <div class="col-md-4">
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <label asp-for="StartDate" class="col-md-2 col-form-label">Start Date</label>
                <div class="col-md-4">
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EndDate" class="col-md-2 col-form-label">End Date</label>
                <div class="col-md-4">
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <label asp-for="JobDesc" class="col-md-2 col-form-label">Job Description</label>
                <div class="col-md-4">
                    <input asp-for="JobDesc" class="form-control" />
                    <span asp-validation-for="JobDesc" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="CreateDate" class="col-md-2 col-form-label">Create Date</label>
                <div class="col-md-4">
                    <input asp-for="CreateDate" class="form-control" type="date" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>

                <label asp-for="CreateBy" class="col-md-2 col-form-label">Create By</label>
                <div class="col-md-4">
                    <input asp-for="CreateBy" class="form-control" />
                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary" style="background-color: #0073fe">Submit</button>
            <a asp-action="WorkExperienceList" style="background-color: #fd0017" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>
